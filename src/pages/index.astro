            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target); // Stop observing to ensure the animation only plays once
            }
        });
    }, { threshold: 0.1 }); // Trigger when at least 10% of the target is visible

    const sections: NodeListOf<HTMLElement> = document.querySelectorAll('#experience-section, #skills-section');
    sections.forEach((section: HTMLElement): void => {
        observer.observe(section);
    });
});


  </script>
  
